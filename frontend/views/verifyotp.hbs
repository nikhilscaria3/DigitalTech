<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/login2.css">
    <link rel="stylesheet" href="./styles/load.css">
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    <title>OTp Auth</title>
</head>

<body onload="myFunction()" style="margin:0;">
    <style>
        body {
            overflow: hidden;
            padding: 0;
            box-sizing: border-box;
        }

        .strike {
            transform: rotate(-16deg);
            position: absolute;
            height: 40px;
            background-color: #ff435e;
            top: 300px;
            width: calc(100% + 70px);

        }

        #myDiv {
            display: none;
            background-color: #f2f2f2;
            box-shadow: 0 0 10px rgba(0, 0, 0, 1);
            border-radius: 1rem;
        }

        .strike1 {
            transform: rotate(-16deg);
            position: absolute;
            height: 40px;
            background-color: #0b30b7;
            top: 430px;
            right: calc(50% + 430px);
            left: -14px;
            border-radius: 1px 192px 1px 5px;
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }
    </style>


    <div id="loader"></div>
    <div class="strike1">

    </div>
    <div class="strike">

    </div>
    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

    <div style="display:none;" id="myDiv" class="animate-bottom">
        <!-- Section: Design Block -->
        <section class="background-radial-gradient overflow-hidden">

            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <img id="logo" src="/image/Gold Luxury Initial Circle Logo (1).png" alt="Logo" width="50"
                                height="50">
                            <span id="name" class="ml-2">Digital Tech</span>
                        </a>
                    </div>
                </li>
            </ul>

            <div class="container" id="container">
                <div class="form-container sign-in-container">
                    <form action="/verify-otp" method="post">
                        <p class="message">{{message}}</p>
                        <h1 for="name" class="form-label">Verify</h1>

                        <input type="text" id="otp" class="form-control rounded" name="otp" required>
                        <span id="otp-error"></span><br>
                        <div class="cf-turnstile" data-sitekey="0x4AAAAAAAGekRDD54Ua73EW"></div>
                        <button id="submit" type="submit">Sign In</button>
                    </form>
                </div>
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="overlay-panel overlay-right">
                            <form id="resend-form" action="/resend-otp" method="POST">
                                <div id="resend" class="text-center">
                                    <button type="submit" class="btn btn-danger mt-3" id="resend-button" disabled>Resend
                                        OTP</button>
                                    <p>OTP will expire within <span id="countdowntimer">20</span> Seconds</p>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <script>
        var timeleft = 20;
        var downloadTimer = setInterval(function () {
            timeleft--;
            document.getElementById("countdowntimer").textContent = timeleft;
            if (timeleft <= 0) {
                clearInterval(downloadTimer);
                document.getElementById("resend-button").disabled = false; // Enable the resend button
            }
        }, 1000);

        const resendButton = document.getElementById("resend-button");
        resendButton.addEventListener("click", function () {
            if (timeleft <= 0) {
                document.getElementById("resend-form").submit(); // Submit the form
            } else {
                alert("Please wait until the timer reaches zero.");
            }
        });
    </script>


    <script>
        var myVar;

        function myFunction() {
            myVar = setTimeout(showPage, 1000);
        }

        function showPage() {
            document.getElementById("loader").style.display = "none";
            document.getElementById("myDiv").style.display = "block";
        }
    </script>

    <!-- Section: Design Block -->
    <script src="/validation/validate.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://kit.fontawesome.com/74dae4b90e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>