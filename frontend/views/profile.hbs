    <script>
        var sidebar = document.getElementById('sidebar');
        var hamButton = document.getElementById('hambutton');

        hamButton.addEventListener('click', function () {
            sidebar.classList.toggle('offcanvas');
        });

        window.addEventListener('resize', function () {
            if (window.innerWidth < 768) {
                sidebar.classList.add('offcanvas');
                document.getElementById("content").classList.add('contents');
                hamButton.style.display = "block";
            } else {
                sidebar.classList.remove('offcanvas');
                document.getElementById("content").classList.remove('contents');
                document.getElementById('hambutton').style.display = "none";
            }
        });
    </script>


