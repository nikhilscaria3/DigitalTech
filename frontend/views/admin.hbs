</head>

<body>

    <style>
        .cart-link {
            position: relative;
        }

        .cart-link::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 2px;
            background-color: black;
            transform: scaleX(0);
            transform-origin: left center;
            transition: transform 0.3s ease-in-out;
        }

        .cart-link:hover::after {
            transform: scaleX(1);
        }
    </style>

    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-smile'></i>
            <span class="text">AdminPortal</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="/admin" class="">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text cart-link">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/product">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text cart-link">Product</span>
                </a>
            </li>
            <li>
                <a href="/users">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text cart-link">Customers</span>
                </a>
            </li>
            <li>
                <a href="/adminorder">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text cart-link">Order</span>
                </a>
            </li>
            <li>
                <a href="/sale-reports">
                    <i class='bx bxs-group'></i>
                    <span class="text cart-link">Reports</span>
                </a>
            </li>
            <li>
                <a href="/transactions">
                    <i class='bx bxs-group'></i>
                    <span class="text cart-link">Transactions</span>
                </a>
            </li>
            <li>
                <a href="/couponadmin">
                    <i class='bx bxs-group'></i>
                    <span class="text cart-link">Coupons</span>
                </a>
            </li>
            <li>
                <a href="/create-banner">
                    <i class='bx bxs-group'></i>
                    <span class="text cart-link">Banner</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text cart-link">Settings</span>
                </a>
            </li>
            <li>
                <a href="/signout" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text cart-link">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="/category" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="img/people.png">
            </a>
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>

                </div>

            </div>

            <ul class="box-info">
                <li>
                    <i class='bx bxs-calendar-check'></i>
                    <a href="/adminorder" class="bg-light">
                        <span class="text">
                            <h3>{{orders.length}}</h3>
                            <p>New Order</p>
                        </span>
                    </a>
                </li>
                <li>
                    <i class='bx bxs-group'></i>
                    <a href="/user" class="bg-light">
                        <span class="text">
                            <h3>{{user.length}}</h3>
                            <p>Visitors</p>
                        </span>
                    </a>
                </li>
                <li>
                    <i class='bx bxs-dollar-circle'></i>
                    <a href="/sale-reports" class="bg-light">
                        <span class="text">
                            <h3>{{ yearlySales.length }}</h3>
                            <p>Total Sales</p>
                        </span>
                    </a>
                </li>
                </li>
            </ul>

            <div>
                <div class="table-data">
                    <div class="order">
                        <div class="head">
                            <h3>Recent Orders</h3>
                            <i class='bx bx-search'></i>
                            <i class='bx bx-filter'></i>
                        </div>
                        <table id="example" class="table">
                            <tbody id="tableBody">
                                {{#each orders}}
                                <tr>
                                    {{#each this.products}}
                                    <td>
                                        {{#if this.image}}
                                        <div class="d-flex align-items-center justify-content-center">
                                            <img src="/{{this.image.filepath}}" class="product-image img-fluid"
                                                style="max-width: 100px;" alt="Product Image" />
                                        </div>
                                        {{else}}
                                        <div class="d-flex align-items-center justify-content-center">
                                            <img src="/images/default-product-image.jpg" class="product-image img-fluid"
                                                style="max-width: 100px;" alt="Default Product Image" />
                                        </div>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <a style="text-decoration:none" class="ml-2" href="/adminorder">
                                            {{this.productname}}
                                        </a>
                                    </td>
                                    {{/each}}
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>


                        <script>
                            const rowCount = {{ orders.length }};

                        </script>

                    </div>

                    <div class="todo">

                        <canvas id="salesChart" width="400" height="400"></canvas>

                    </div>

                </div>
            </div>

            <div class="container mt-5">
                <div class="row justify-content-center bg-light">
                    <div class="col-md-10 ">
                        <div class="todo">

                            <canvas id="productChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- MAIN -->
    </section>



    <script>
        $(document).ready(function () {
            var tableBody = $("#tableBody");
            var rows = tableBody.children("tr");
            rows.each(function () {
                tableBody.prepend(this);
            });
        });
    </script>

    <script>
        // Get the length values from the server-side variables
        const dailySalesLength = {{ dailySales.length }};
        const weeklySalesLength = {{ weeklySales.length }};
        const yearlySalesLength = {{ yearlySales.length }};

        // Create a chart using Chart.js
        const ctx = document.getElementById('salesChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Daily Sales', 'Weekly Sales', 'Yearly Sales'],
                datasets: [{
                    label: 'Sales Length',
                    data: [dailySalesLength, weeklySalesLength, yearlySalesLength],
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        // You can customize other scale options as needed
                    }
                }
            }
        });
    </script>


    <script>
        // Get the length values from the server-side variables
        const Smartphone = {{ smartphonelength }};
        const Laptops = {{ laptoplength }};
        const Headphones = {{ headphonelength }};

        console.log(Smartphone)
        // Create a chart using Chart.js
        const ctx1 = document.getElementById('productChart').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Smartphone', 'Laptop', 'Headphones'],
                datasets: [{
                    label: 'Product list length',
                    data: [Smartphone, Laptops, Headphones],
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                }]
            },
            options: {
                scales: {
