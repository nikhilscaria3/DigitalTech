  <style>
    /* Custom styles for the coupon page */
    body {
      padding: 20px;
      background-color: #f5f5f5;
    }

    .coupon-container {
      margin-bottom: 20px;
    }

    .coupon-card {
      border: none;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: box-shadow 0.3s ease-in-out;
    }

    .coupon-card:hover {
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .coupon-image {
      width: 10rem;
      height: 10rem;
      object-fit: contain;
      margin: auto;
    }

    .coupon-content {
      padding: 20px;
    }

    .coupon-description {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .coupon-details,
    .coupon-expires,
    .coupon-terms {
      margin-bottom: 5px;
    }

    .edit-icon {
      color: #fff;
      background-color: #007bff;
      border-radius: 50%;
      width: 30px;
      height: 30px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease-in-out;
    }

    .edit-icon:hover {
      background-color: #0056b3;
    }

    .coupon-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      opacity: 0;
      transition: opacity 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #ffffff;
      text-align: center;
    }

    .coupon-container:hover .coupon-overlay {
      opacity: 1;
    }

    .coupon-overlay-content {
      opacity: 0;
      transition: opacity 0.3s;
    }

    .coupon-container:hover .coupon-overlay-content {
      opacity: 1;
    }

    .modal-dialog {
      max-width: 500px;
    }

    .coupon-form {
      padding: 20px;
      background-color: #ffffff;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .coupon-form h2 {
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: bold;
    }

    .form-group input[type="text"],
    .form-group textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ced4da;
    }

    .form-group textarea {
      resize: vertical;
      height: 100px;
    }

    .form-group button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #ffffff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #sidebar .side-menu li a {
      text-decoration: none;
    }

    .cart-link {
      position: relative;
    }

    .cart-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 100%;
      height: 2px;
      background-color: black;
      transform: scaleX(0);
      transform-origin: left center;
      transition: transform 0.3s ease-in-out;
    }

    .cart-link:hover::after {
      transform: scaleX(1);
    }
  </style>
