                        {{#each address}}
                        <div class="card">

                            <div class="card-body">
                                <h5 class="card-title">{{this.address}}</h5>
                                <p class="card-text">{{this.country}}</p>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <a href="/address?edit_id={{this._id}}"
                                            class="text-light text-decoration-none">Update</a>
                                    </button>
                                    <button class="btn btn-danger" type="button">
                                        <a href="/address?delete_id={{this._id}}"
                                            class="text-light text-decoration-none ">Delete</a>
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-start" style="width:100%">
                                        <li>
                                            <form id="addressForm" action="/address" method="post" class="p-5">
                                                <div class="mb-3">
                                                    <input type="hidden" id="id" name="id" value="{{ this._id }}">
                                                    <label for="fullName" class="form-label">Full Name:</label>
                                                    <input type="text" id="fullName" name="name" value="{{this.name}}"
                                                        class="form-control" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="addressLine1" class="form-label">Address Line
                                                        1:</label>
                                                    <input type="text" id="addressLine1" name="addressLine1"
                                                        class="form-control" value="{{this.address}}" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="city" class="form-label">City:</label>
                                                    <input type="text" id="city" name="city" class="form-control"
                                                        value="{{this.city}}" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="state" class="form-label">State:</label>
                                                    <input type="text" id="state" value="{{this.state}}" name="state"
                                                        class="form-control" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="postalCode" class="form-label">Zip Code:</label>
                                                    <input type="text" id="postalCode" value="{{this.zip}}"
                                                        name="postalCode" class="form-control" required>
                                                </div>
                                                <div class="mb-3">
                                                    <label for="country" class="form-label">Country:</label>
                                                    <input type="text" id="country" name="country"
                                                        value="{{this.country}}" class="form-control" required>
                                                </div>
                                                <input type="submit" value="Submit" class="btn btn-primary">
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {{/each}}

