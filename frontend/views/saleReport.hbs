<body>
    <style>
        .button-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .salebtn button {
            padding: 10px 20px;
            margin-right: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
        }

        .button-container button.active {
            background-color: #008CBA;
            border-style: groove;
            border-color: black;
        }

        .report-container {
            display: none;
            padding: 2rem;
        }

        .report-container.show {
            display: block;
        }

        text {
            text-decoration: none;
        }

        h1 {
            padding: 1rem;
        }

        .cart-link {
            position: relative;
        }

        .cart-link::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 2px;
            background-color: black;
            transform: scaleX(0);
            transform-origin: left center;
            transition: transform 0.3s ease-in-out;
        }

        .cart-link:hover::after {
            transform: scaleX(1);
        }

        .buttonpdf {
            background-color: #FF0000;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .buttonexcel {
            background-color: #217346;
            color: #FFFFFF;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .buttonexcel i {
            margin-right: 5px;
        }



        .buttonpdf i {
            margin-right: 5px;
        }



        .download-container {

            justify-content: end;
            margin-bottom: 20px;
        }
    </style>

